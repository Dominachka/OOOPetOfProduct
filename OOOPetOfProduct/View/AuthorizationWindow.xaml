<Window x:Class="OOOPetOfProduct.View.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOOPetOfProduct.View"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="400" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label Content="Логин"/>
            <TextBox Name="Login"/>
            <Label Content="Пароль"/>
            <TextBox Name="Password"/>
            <StackPanel Name="spCaptcha" Visibility="Visible">
                <Canvas Name="canvas" Height="40"/>
                <TextBox Name="tbCaptcha"/>
            </StackPanel>
            <Button Click="OnSingIn" Content="Войти" Width="80" Margin="15"/>
        </StackPanel>
    </Grid>
</Window>
